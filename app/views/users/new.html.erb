<div class="container">

    <div class="card bg-light">
        <article class="card-body mx-auto" style="max-width: 400px;">
            <h4 class="card-title mt-3 text-center">Create Account</h4>
            <p class="text-center">Get started with your free account</p>
            <%= form_for @user do |f| %>
            <div class="form-group input-group">
                <%= f.text_field :username , class: "form-control mb-2 mr-sm-2" ,placeholder: "username" %>
            </div>
            <div class="form-group input-group">
                <%= f.email_field :email , class: "form-control mb-2 mr-sm-2" ,placeholder: "email" %>
            </div>
            <div class="form-group input-group">
                <%= f.password_field :password , class: "form-control mb-2 mr-sm-2" ,placeholder: "password" %>
            </div>
            <div class="form-group input-group">
                <%= f.password_field :password_confirmation , class: "form-control mb-2 mr-sm-2" ,placeholder: "confirm password" %>
            </div>
            <div class="form-group">
                <%= f.submit  "Create Account", class: "btn btn-primary" %>
            </div>
            <% end %>
            <p class="text-center">Have an account? <a href="">Log In</a> </p>
        </article>
    </div> <!-- card.// -->

</div>